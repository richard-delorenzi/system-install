#!/bin/bash

packages=(

  #admin
  kuser synaptic

  #tools
  yakuake emacs emacs-goodies-el emacs-goodies-extra-el markdown

  #revision control
  kdesvn git tortoisehg-nautilus subversion

  #desktop
  chromium flashplugin-nonfree plasma-widget-smooth-tasks plasma-widget-fastuserswitch redshift

  #system
  hibernate #deb-multimedia-keyring

  #security
  keepassx

  #firewall
  ufw squid3 squidguard
  

)

aptitude install -y ${packages[@]}
